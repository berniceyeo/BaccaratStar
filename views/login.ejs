<!DOCTYPE html>
<html lang="en">
  <%- include("header") %>
  <body>
    <%- include("navbar") %>
    <div class="container-fluid bg-dark h-auto">
      <div class="row bg-image justify-content-end" style="min-height: 89.1vh;">
        <div
          id="sidebar"
          class="col-12 col-sm-4 d-flex flex-column justify-content-center align-items-center bg-transparent-black"
          style="min-height: 89.1vh;"
        >
          <form
            action="/login"
            method="POST"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                class="form-control <%=emailvalid %>"
                id="email"
                name="email"
                required
              />
              <div class="invalid-feedback text-second">
                <%= emailfeedback %>
              </div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control <%=pwvalid %>"
                id="password"
                name="password"
                required
              />
              <div class="invalid-feedback text-second">
                <%= pwfeedback %>
              </div>
            </div>
            <button type="submit" class="main-btn">Submit</button>
          </form>
          <div class="mt-3">
            <a href="/signup" class="link"
              >Not yet a baccarat star, signup here!</a
            >
          </div>
        </div>
      </div>
    </div>

    <%- include("footer") %>
  </body>
</html>
