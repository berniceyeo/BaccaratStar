<!DOCTYPE html>
<html lang="en">
  <%- include('header') %>
  <body>
    <%- include('navbar') %>
    <div class="container-fluid bg-dark h-auto">
      <div class="row bg-image justify-content-end" style="min-height: 89.1vh;">
        <div
          id="sidebar"
          class="col-12 col-sm-4 d-flex flex-column justify-content-center align-items-center bg-transparent-black"
          style="min-height: 89.1vh;"
        >
          <form
            action="/signup"
            method="POST"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                required
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                class="form-control <%=emailvalid %>"
                id="email"
                name="email"
                required
              />
              <div class="invalid-feedback">
                <%= emailfeedback %>
              </div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control <%=pwvalid %>"
                id="password"
                name="password"
                required
              />
              <div class="invalid-feedback">
                <%= pwfeedback %>
              </div>
            </div>
            <button type="submit" class="main-btn">Submit</button>
            <div class="mt-3">
              <a href="/login" class="link"
                >Already a baccarat star, login here.</a
              >
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include("footer") %>
  </body>
</html>
